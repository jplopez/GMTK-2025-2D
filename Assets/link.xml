<!-- Assets/link.xml -->
<linker>
  <assembly fullname="Assembly-CSharp" preserve="all"/>
  <assembly fullname="Unity.InputSystem" preserve="all"/>
  <assembly fullname="Ameba" >
    <!-- Initialization, State Machine, Handlers and Score keeper-->
    <type fullname="Ameba.InitializationManager" preserve="all"/>
    <type fullname="Ameba.InitializationComponent" preserve="all"/>
    <!--  Event Channel -->
    <type fullname="Ameba.EventChannel" preserve="all"/>
    <!--  State Machine -->
    <type fullname="Ameba.StateMachine" preserve="all"/>
    <type fullname="Ameba.IGameStateHandler" preserve="all"/>
    <!-- Score keeper-->
    <type fullname="Ameba.ScoreGateKeeper" preserve="all"/>
  </assembly>
  <assembly fullname="GMTK" >
    <!-- Preserve your game-specific types -->
    <type fullname="GMTK.GameStateMachine" preserve="all"/>
    <type fullname="GMTK.GameEventChannel" preserve="all"/>
    <type fullname="GMTK.Game" preserve="all"/>
    <type fullname="GMTK.GameContext" preserve="all"/>
    <type fullname="GMTK.HudController" preserve="all"/>
    <type fullname="GMTK.GameStates" preserve="all"/>

    <!-- Preserve interfaces that might be stripped -->
    <type fullname="GMTK.IGameStateHandler" preserve="all"/>
  </assembly>

</linker>
